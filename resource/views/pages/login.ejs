<div id="frame" class="login-frame">
    <% if(error){ %>
        <h3 class="mt-4 text-center" style="color:rgb(240, 80, 80)"><%= error %></h3>
    <% } %>
    <div class="col-2"></div>
    <div class="col-8 loginForm">
        <form action="/support/login" method="post">
            <div class="mt-5">
                <label for="exampleFormControlInput1" class="form-label d-inline-block">Mobile : </label>
                <input type="text" class="form-control w-50 d-inline-block" name="phone" id="phone" placeholder="example: 09121231234">
                <input type="submit" class="d-inline-block" id="login-submit" value="ورود">
            </div>
        </form>
    </div>
    <div class="col-2"></div>
</div>

